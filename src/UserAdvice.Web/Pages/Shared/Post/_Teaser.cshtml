@model ViewModel.PostTeaser

<div class="border mt-3 p-3">
    <div class="d-flex flex-row">
        <div class="flex-grow-1">
            <h2 class="h3">@Model.Title</h2>
            @if (!object.Equals(Model.Category?.Id, ViewData["CategoryId"]))
            {
                <h3 class="h4 text-muted">@Model.Category?.Name</h3>
            }
        </div>
        <div class="">
            <i class="fa fa-comments-o"></i> @Model.CommentCount
        </div>
    </div>
    <div class="d-flex flex-row">
        <div class="mx-3 text-center">
            <if condition="Model.UserVoted">
                <i class="fa fa-chevron-up text-alert"></i>
                <else>
                    <i class="fa fa-chevron-up"></i>
                </else>
            </if><br />
            <span class="text-large">@Model.VoteCount</span>
        </div>
        <div class="flex-grow-1">
            <div class="row">
                <div class="col">
                    <markdown mode="Simple" source="@Model.Content" />
                </div>
                @if (Model.Tags.Any())
                {
                    <div class="col col-3">
                        <partial name="Post/_Tags" model="Model.Tags" />
                    </div>
                }
            </div>
        </div>
    </div>
    @foreach (var status in Model.StatusComments)
    {
        <hr />
        <div class="d-flex">
            BLA
        </div>
    }
</div>